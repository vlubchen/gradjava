<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Gradjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.vlubchen.gradjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dishesServlet</servlet-name>
        <servlet-class>ru.vlubchen.gradjava.web.DishesServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dishesServlet</servlet-name>
        <url-pattern>/dishes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restaurantsServlet</servlet-name>
        <servlet-class>ru.vlubchen.gradjava.web.RestaurantsServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>restaurantsServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>

</web-app>